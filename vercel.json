{
  "version": 2,
  "builds": [
    { "src": "backend/app.js", "use": "@vercel/node" },
    { "src": "react-frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.js" },
    { "src": "/relayer-status", "dest": "/backend/app.js" },
    { "src": "/relayer-selfcheck", "dest": "/backend/app.js" },
    { "src": "/health", "dest": "/backend/app.js" },
    { "src": "/static/(.*)", "dest": "/react-frontend/build/static/$1" },
  { "src": "/(.*)\\.(js|css|png|jpg|jpeg|svg|json|ico|txt|map)", "dest": "/react-frontend/build/$1.$2" },
    { "src": "/(.*)", "dest": "/react-frontend/build/index.html" }
  ]
}
